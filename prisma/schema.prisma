datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      String   @default("patient")
  createdAt DateTime @default(now())
}

model Appointment {
  id          String   @id @default(cuid())
  patientId   String
  providerId  String
  scheduledAt DateTime
  status      String   @default("scheduled")
  createdAt   DateTime @default(now())
}